<legend><h2>Sign up</h2></legend>
<p>When you are a registered user of the WGBH Stock Sales site, you can do things</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-input"><%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true %></div>

  <div class="form-input"><%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (at least 8 characters)', required: true %></div>

  <div class="form-input"><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', required: true %></div>

  <div class="form-input"><%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder: 'First name', required: true %></div>

  <div class="form-input"><%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: 'Last name', required: true %></div>

  <div class="form-input"><%= f.label :company %>
    <%= f.text_field :company, placeholder: 'Company' %></div>

  <div class="form-input"><%= f.label :phone %>
    <%= f.text_field :phone, placeholder: 'Phone number (just digits)', required: true %></div>

  <div class="form-input"><%= f.label :fax %>
    <%= f.text_field :fax, placeholder: 'Fax' %></div>

  <div class="form-input"><%= f.label :address1 %>
    <%= f.text_field :address1, placeholder: 'Address 1' %></div>

  <div class="form-input"><%= f.label :address2 %>
    <%= f.text_field :address2, placeholder: 'Address 2' %></div>

  <div class="form-input"><%= f.label :city %>
    <%= f.text_field :city, placeholder: 'City' %></div>

  <div class="form-input"><%= f.label :state %>
    <%= f.text_field :state, placeholder: 'State' %></div>

  <div class="form-input"><%= f.label :zipcode %>
    <%= f.text_field :zipcode, placeholder: 'Zip code' %></div>

  <button type="submit" class="btn btn-primary">Sign up</button>
<% end %>

<%= render "devise/shared/links" %>
